<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@game.errors.count, "error") %>
      prohibited this game from being saved:
    </h2>

    <ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @game.reviews.first != nil%>
  <% if @game.reviews.first.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.reviews.first.errors.count, "error") %>
        prohibited this review from being saved:
      </h2>

    <ul>
    <% @game.reviews.first.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% end %>

<%= form_for @game do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
    <p>Available On:</p>
    <%= f.collection_check_boxes :console_ids, Console.all, :id, :name %><br>
    <%= f.fields_for :reviews, @game.reviews.build do |rev| %>
      Rating:
      <%= rev.text_field :rating %><br>
      Review:
      <%= rev.text_field :content %><br>
    <% end %>
  <%= f.submit %>
<% end %>
