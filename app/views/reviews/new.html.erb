<p>Creating a review for <%= @game.name %>

<%= form_for @game do |f| %>
  <%= f.fields_for :reviews do |rev| %>
    <%= rev.hidden_field :game_id %>
    <%= rev.label :rating %>
    <%= rev.text_field :rating %><br>

    <%= rev.label :content %>
    <%= rev.text_field :content %>
    <% end %>
  <%= f.submit %>
<% end %>
